<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "classpath:mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="useGeneratedKeys" value="true"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias alias="Item" type="com.lomoye.hours.core.domain.Item"/>
        <typeAlias alias="Item" type="com.lomoye.hours.core.domain.ItemParam"/>
        <typeAlias alias="Item" type="com.lomoye.hours.core.domain.ItemParamValue"/>
        <typeAlias alias="Item" type="com.lomoye.hours.core.domain.ItemRecord"/>


    </typeAliases>

    <mappers>
        <mapper resource="com/lomoye/common/dao/Common.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/ItemMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/ItemParamMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/ItemParamValueMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/ItemRecordMapper.xml"/>

    </mappers>

</configuration>