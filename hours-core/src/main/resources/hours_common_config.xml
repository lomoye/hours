<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "classpath:mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="useGeneratedKeys" value="true"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias alias="Item" type="com.lomoye.hours.core.domain.Item"/>
        <typeAlias alias="ItemParam" type="com.lomoye.hours.core.domain.ItemParam"/>
        <typeAlias alias="ItemParamValue" type="com.lomoye.hours.core.domain.ItemParamValue"/>
        <typeAlias alias="ItemRecord" type="com.lomoye.hours.core.domain.ItemRecord"/>
        <typeAlias alias="User" type="com.lomoye.hours.core.domain.User"/>
        <typeAlias alias="CreditAccount" type="com.lomoye.hours.core.domain.CreditAccount"/>
        <typeAlias alias="CreditAccountLog" type="com.lomoye.hours.core.domain.CreditAccountLog"/>
        <typeAlias alias="Article" type="com.lomoye.hours.core.domain.Article"/>
        <typeAlias alias="VersionNote" type="com.lomoye.hours.core.domain.VersionNote"/>
        <typeAlias alias="VersionNote" type="com.lomoye.hours.core.domain.ItemGoal"/>
    </typeAliases>

    <mappers>
        <mapper resource="com/lomoye/common/dao/Common.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/ItemMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/ItemParamMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/ItemParamValueMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/ItemRecordMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/UserMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/CreditAccountMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/CreditAccountLogMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/ArticleMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/VersionNoteMapper.xml"/>
        <mapper resource="com/lomoye/hours/core/dao/ItemGoalMapper.xml"/>
    </mappers>

</configuration>